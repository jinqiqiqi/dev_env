;; bind keys for volume adjustment.
(bind-keys global-keymap
		   "Super-[" '(eric-volume "5%-" ".*?\\[([^%]*%)\\].*"))
(bind-keys global-keymap
		   "Super-]" '(eric-volume "5%+" ".*?\\[([^%]*%)\\].*"))
(bind-keys global-keymap
		   "Super-\\" '(eric-volume "toggle" ".*\\[(on|off)\\].*"))

