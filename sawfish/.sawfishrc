(setq startup-programs
	  '(
		("fbpanel")
		("fcitx")
		("nm-applet")
		("megasync")
		("skypeforlinux")
		("slack")
		("synapse")
		("synergy")
		("teamviewer")
		("xscreensaver")
		))

(mapc (lambda (program)
		(apply start-process (make-process standard-output) program))
	  startup-programs)

(add-hook 'before-exit-hook
		  (lambda ()
			(mapc stop-process (active-processes))))
